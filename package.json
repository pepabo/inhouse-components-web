{
  "name": "components-web",
  "private": true,
  "description": "Inhouse Components Web",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "start": "lerna run start --stream",
    "watch": "lerna run watch --stream",
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf dist",
    "compile": "lerna run build --stream",
    "deploy": "gh-pages -d dist",
    "lint": "npm run lint:style && npm run lint:script",
    "lint:style": "stylelint {,**/}*.scss",
    "lint:style:fix": "npm run lint:style -- --fix",
    "lint:script": "eslint . --ext ts,tsx",
    "test": "bash scripts/test.sh",
    "changelog": "ts-node scripts/create_changelog.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@gyugyu/assert-sass": "0.1.2",
    "@gyugyu/sassunit": "0.2.0",
    "@octokit/graphql": "5.0.5",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "@yinm/lerna-changelog": "1.0.1",
    "eslint": "8.36.0",
    "eslint-plugin-react": "7.32.2",
    "gh-pages": "5.0.0",
    "lerna": "6.5.1",
    "sass": "1.59.3",
    "stylelint": "15.10.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard-scss": "2.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "changelog": {
    "repo": "inhouse/components-web",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    },
    "cacheDir": ".changelog"
  }
}
